# VPC Endpoints for AWS Services
# Lambda functions use these endpoints to communicate with AWS services without internet access
# This eliminates the need for NAT Gateway, reducing costs and improving security

# S3 Gateway Endpoint (free - for Lambda code, logs, etc.)
resource "aws_vpc_endpoint" "s3" {
  vpc_id       = aws_vpc.main.id
  service_name = "com.amazonaws.${var.aws_region}.s3"
  
  route_table_ids = concat(
    [aws_route_table.public.id],
    aws_route_table.private[*].id
  )

  tags = {
    Name = "${var.project_name}-${var.environment}-s3-endpoint"
  }
}

